# Server configuration
HOST=localhost
PORT=8080
# Default WARN
LOG_LEVEL=INFO
MATH_ENV=dev

# LLM configuration
# Default is ollama (alternative: anthropic)
LLM_PROVIDER=ollama
# Default is llama3.1:8b - other options: llama3, gemma:7b, mistral, mixtral, etc.
OLLAMA_MODEL=llama3.1:8b
# For local development, use localhost
OLLAMA_HOST=http://ollama:11434

# Sentence Transformer configuration
# Default model for English text (384-dimensional embeddings)
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
# Alternative multilingual model (uncomment to use)
# SENTENCE_TRANSFORMER_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Database configuration
DATABASE_HOST=localhost
DATABASE_NAME=polis_subset
DATABASE_PASSWORD=christian
DATABASE_PORT=5432
DATABASE_USER=christian

# Database advanced
DATABASE_SSL_MODE=disable
# Default 5
DATABASE_POOL_SIZE=5
# Default 10

# Conversation configuration
# Default 5
CONV_GROUP_K_MAX=5
# Default 2
CONV_GROUP_K_MIN=2
# Default 400
CONV_MAX_CMTS=400
# Default 5000
CONV_MAX_PTPTS=5000

# Polling configuration
POLL_ALLOWLIST=
POLL_BLOCKLIST=
# Default 1000
POLL_INTERVAL_MS=1000
# Default 5000
POLL_MOD_INTERVAL_MS=5000
# Default 10000
POLL_TASK_INTERVAL_MS=10000
# Default 1000
POLL_VOTE_INTERVAL_MS=1000
