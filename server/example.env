# These variables will be overriden by those set in the environment.
# docker compose will use the root level .env file and ignore this one.
# This file is intended to be used for local development.
# It can optionally be included when running the server in a docker
# container, for example `docker run --env-file .env`.

API_DEV_HOSTNAME=localhost:5000
API_SERVER_PORT=5000
# DATABASE_URL=postgres://postgres:oiPorg3Nrz0yqDLE@localhost:5432/polis-dev # DEV
DATABASE_URL=postgres://postgres:PdwPNS2mDN73Vfbc@localhost:5432/polis-test # TEST
DEV_MODE=true
DOMAIN_OVERRIDE=
MATH_ENV=dev
POLIS_FROM_ADDRESS="Example <team@example.com>"
SERVER_LOG_LEVEL=info
SES_ENDPOINT=http://localhost:8005
STATIC_FILES_ADMIN_PORT=8080
STATIC_FILES_PARTICIPATION_PORT=8080
STATIC_FILES_HOST=localhost
ADMIN_UIDS=

# OIDC Configuration
AUTH_AUDIENCE=users
AUTH_CERTS_PATH=~/.simulacrum/certs
AUTH_CLIENT_SECRET=dev_auth-client_secret
AUTH_DOMAIN=localhost:3000
AUTH_ISSUER=https://localhost:3000/
AUTH_KEYS_PATH=./keys
AUTH_NAMESPACE=https://pol.is/
AUTH_SIMULATOR_PORT=3000
JWKS_URI=https://localhost:3000/.well-known/jwks.json
JWT_PRIVATE_KEY_PATH=./keys/jwt-private.pem
JWT_PUBLIC_KEY_PATH=./keys/jwt-public.pem
POLIS_JWT_ISSUER=https://pol.is/
POLIS_JWT_AUDIENCE=participants

# Treevite login code lookup pepper (used for SHA-256 lookup hash)
LOGIN_CODE_PEPPER=change-this-in-prod

# DynamoDB
DYNAMODB_ENDPOINT=http://localhost:8000

# Decimal between 0.0 and 1.0. This determines how frequently to
# pull the next comment from selected topics, if available.
TOPICAL_COMMENT_RATIO=0.6
