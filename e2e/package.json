{
  "name": "polis-e2e",
  "version": "1.0.0",
  "description": "End-to-End test suite for polis, using Cypress.js",
  "main": "index.js",
  "scripts": {
    "start": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress open",
    "test": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:admin": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress run --spec 'cypress/e2e/client-admin/**/*.cy.js'",
    "test:auth": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress run --spec 'cypress/e2e/auth/**/*.cy.js'",
    "test:participation": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress run --spec 'cypress/e2e/client-participation/**/*.cy.js'",
    "test:embed": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress run --spec 'cypress/e2e/client-participation/embeds.cy.js'",
    "test:integrated": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress run --spec 'cypress/e2e/client-participation/integrated.cy.js'",
    "test:conversation": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress run --spec 'cypress/e2e/client-admin/conversation.cy.js'",
    "cy:run": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress run",
    "cy:open": "NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem cypress open",
    "build:embed": "node build-embed.js",
    "build:integrated": "node build-integrated.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "cypress": "^14.5.4",
    "cypress-terminal-report": "^7.2.1",
    "dotenv": "^17.2.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-mocha": "^11.1.0",
    "prettier": "^3.6.2"
  }
}
